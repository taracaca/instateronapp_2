<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="4dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reportDetail"
        android:layout_width="wrap_content"
        android:text="Rapor eden userID : 1234\nRapor eden kullanıcı : Adı Soyadı\nRapor edilen postID : 1234\nRapor edilen gönderi içeriği: 'gönderi 1234 gönderi'\nRapor edilme nedeni : Spam"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/notification_time"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:text="39 dk önce rapor edildi."
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:gravity="left|center"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gönderiyi Sil"
        android:textColor="#FF0000"
        android:layout_alignParentRight="true"
        android:layout_below="@id/reportDetail"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/removePost" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gönderiyi Görüntüle"
        android:textColor="#000080"
        android:layout_below="@id/reportDetail"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/viewPost"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>