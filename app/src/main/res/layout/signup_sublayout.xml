<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signup_sublayout"
    android:visibility="gone"
    android:background="#44AAAA">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_person_white_48dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <EditText

        android:id="@+id/editText14"
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Tam isminiz"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#808080"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/editText15"
        android:layout_below="@+id/editText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="E-mail adresiniz"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textColorHint="#808080"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <AutoCompleteTextView

        android:id="@+id/editText16"
        android:layout_below="@+id/editText15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Hangi Şehirdensiniz"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        />
    <EditText

        android:id="@+id/editText17"
        android:layout_below="@+id/editText16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Doğum Tarihiniz"
        android:padding="10dp"
        android:enabled="false"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İleri"
        android:id="@+id/buttonNext"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/editText17"
        android:layout_alignStart="@+id/editText16"
        android:layout_alignEnd="@+id/editText16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="20dp"
        android:text="Hesabınız var mı? Hemen Giriş Yapın!"
        android:textColor="#FFF"
        android:id="@+id/textViewLogin"
        android:layout_below="@+id/buttonNext"
        android:layout_centerHorizontal="true" />

</RelativeLayout>