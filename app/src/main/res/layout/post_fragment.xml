<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        card_view:cardElevation="6dp"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userPic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_person_black_48dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFBBBBBB"/>
            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:text="Fullname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:textSize="16sp"
                android:layout_toRightOf="@id/userPic"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@id/userPic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 saat Ã¶nce"
                android:id="@+id/postedTime"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:text="Content content content"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/userPic"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/buttons"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_below="@+id/post_content">
                <ImageView
                    android:id="@+id/like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"

                    android:src="@drawable/ic_sentiment_very_satisfied_black_48dp"/>
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:text="178"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="18sp"
                    android:textColor="#262626"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/dislike"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_sentiment_very_dissatisfied_black_48dp" />
                <TextView
                    android:id="@+id/dislike_count"
                    android:layout_width="wrap_content"
                    android:text="46"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="18sp"
                    android:textColor="#262626"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"

                    android:src="@drawable/ic_comment_black_48dp" />
                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:text="15"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center"
                    android:textSize="18sp"
                    android:textColor="#262626"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/comment"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_below="@id/card_view"
        android:scrollbars="vertical"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editText13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText13"
        android:hint="Yorum yaz..."
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
